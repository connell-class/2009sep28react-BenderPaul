package com.projectzero.ui;

import java.util.Scanner;

import com.projectzero.controller.CustomerController;

public class CustomerMenu {
	private static CustomerLoginMenu clm = new CustomerLoginMenu();
	private static CustomerRegisterMenu crm = new CustomerRegisterMenu();
	private CustomerController cc;
	
	public CustomerMenu() {
		this(new CustomerController());
	}
	
	public CustomerMenu(CustomerController cc) {
		super();
		this.cc = cc;
	}
	
	public String customerMenu (Scanner scan) {
		System.out.println("\nWhat would you like to do?");
		System.out.println("1. Login to existing customer account");
		System.out.println("2. Register new customer account");
		System.out.println("0. Return to Main Menu");
		String selection = scan.nextLine();
		switch(selection) {
		case 1:
			clm.customerLoginMenu(scan);
			customerMenu(scan);
			break;
		case 2:
			crm.customerRegisterMenu(scan);
			customerMenu(scan);
			break;
		default:
			System.out.println("Invalid entry");
			customerMenu(scan);
		}
	}	
}
