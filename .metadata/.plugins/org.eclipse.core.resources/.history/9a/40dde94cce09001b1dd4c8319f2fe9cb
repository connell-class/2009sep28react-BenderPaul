package com.projectzero;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;

import com.projectzero.ui.DealershipMenu;

public class Driver {
	
	private static DealershipMenu mainMenu = new DealershipMenu();
	/*
	 * TODO instantiate other menus after they've been created
	 */
	
	public static void main(String[] args) throws IOException {
		BufferedReader userInput = new BufferedReader(new InputStreamReader(System.in));
		//BufferedWriter systemOutput = new BufferedWriter(new OutputStreamWriter(System.out));
		mainMenu(userInput);
	}
		
	private static void mainMenu(BufferedReader reader) {
		System.out.println("template for dealership page");
		System.out.println("make a dang option");
		System.out.println("1. cars");
		System.out.println("2. employee login");
		System.out.println("3. customer login");
		System.out.println("0. Exit");
		
		try {
			int chosenOption = reader.read();
			switch(chosenOption) {
			case 1:
				BufferedWriter systemOutput = new BufferedWriter(new OutputStreamWriter(System.out));
				systemOutput.write("good stuff 1");
				System.out.println("good choice 1");
				/*
				 * TODO Replace with another menu
				 * TODO mainmenu call with buffer
				 * TODO break
				 */
				
			case 2:
				System.out.println("good choice 2");
				/*
				 * TODO Replace with another menu
				 * TODO mainmenu call with buffer
				 * TODO break
				 */
			case 3:
				System.out.println("good choice 3");
				/*
				 * TODO Replace with another menu
				 * TODO mainmenu call with buffer
				 * TODO break
				 */
			case 0:
				System.out.println("good choice 3");
				System.exit(0);
				/*
				 * TODO Replace with another menu
				 * TODO mainmenu call with buffer
				 * TODO break
				 */
			}

		} catch (IOException e) {
			e.printStackTrace();
		}

		
	}
}	
